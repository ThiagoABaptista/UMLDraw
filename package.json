{
  "name": "umldraw",
  "displayName": "UMLDraw",
  "description": "Extens√£o do VS Code para desenhar diagramas UML (React + Konva).",
  "version": "0.0.1",
  "publisher": "thiago-baptista",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:umlDraw.start"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "umlDraw.start",
        "title": "UMLDraw: Abrir editor"
      },
      {
        "command": "umlDraw.save",
        "title": "UMLDraw: Salvar diagrama"
      },
      {
        "command": "umlDraw.load",
        "title": "UMLDraw: Carregar diagrama"
      },
      {
        "command": "umlDraw.exportPNG",
        "title": "UMLDraw: Exportar como PNG"
      },
      {
        "command": "umlDraw.exportPDF",
        "title": "UMLDraw: Exportar como PDF"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "umlDraw.save",
          "when": "umlDrawEditorActive"
        },
        {
          "command": "umlDraw.load",
          "when": "umlDrawEditorActive"
        },
        {
          "command": "umlDraw.exportPNG",
          "when": "umlDrawEditorActive"
        },
        {
          "command": "umlDraw.exportPDF",
          "when": "umlDrawEditorActive"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -p . -w",
    "build:webview": "webpack --mode production",
    "watch:webview": "webpack --watch --mode development",
    "build": "npm run build:webview && npm run compile",
    "vscode:prepublish": "npm run build",
    "package": "npx @vscode/vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/vscode": "^1.84.0",
    "@vscode/vsce": "^2.15.0",
    "buffer": "^6.0.3",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "process": "^0.11.10",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.4.0",
    "typescript": "^5.0.0",
    "util": "^0.12.5",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.2",
    "jspdf-autotable": "^5.0.2",
    "konva": "^9.3.22",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-konva": "^19.0.7"
  }
}
